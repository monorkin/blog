<% if previous_article.present? || next_article.present? %>
  <nav class="mx-2 md:mx-0 grid grid-cols-2 gap-4">
    <% if previous_article.present? %>
      <div class="col-start-1 shadow md:shadow-lg bg-white dark:bg-neutral-900 dark:border dark:border-neutral-500 rounded md:rounded-lg p-4">
        <div class="text-xs text-neutral-500 dark:text-neutral-400 mb-1">&larr; <%= t(".previous_article") %></div>
        <%= link_to previous_article.title, article_path(previous_article), class: "text-indigo-600 hover:text-indigo-800 dark:text-yellow-500 dark:hover:text-yellow-400 font-medium line-clamp-2" %>
      </div>
    <% end %>
    <% if next_article.present? %>
      <div class="col-start-2 shadow md:shadow-lg bg-white dark:bg-neutral-900 dark:border dark:border-neutral-500 rounded md:rounded-lg p-4 text-right">
        <div class="text-xs text-neutral-500 dark:text-neutral-400 mb-1"><%= t(".next_article") %> &rarr;</div>
        <%= link_to next_article.title, article_path(next_article), class: "text-indigo-600 hover:text-indigo-800 dark:text-yellow-500 dark:hover:text-yellow-400 font-medium line-clamp-2" %>
      </div>
    <% end %>
  </nav>
<% end %>
